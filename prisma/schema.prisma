generator client {
  provider      = "prisma-client-js"
  output        = "../lib/generated/prisma"
  binaryTargets = ["native"]
}

datasource db {
  provider = "postgresql"
}

model Config {
  id                   String   @id @default(cuid())
  enabled              Boolean  @default(true)
  maxChecks            Int      @default(20)
  indexedStopThreshold Int      @default(2)
  applyBlacklistRule   Boolean  @default(true)
  applyWhitelistRule   Boolean  @default(true)
  apiKey               String   @unique
  updatedAt            DateTime @updatedAt

  @@map("config")
}

model CreditConfig {
  id              String   @id @default(cuid())
  totalCredits    Int      @default(1250000)
  usedCredits     Int      @default(0)
  reservedCredits Int      @default(0)
  creditsPerCheck Int      @default(10)
  updatedAt       DateTime @updatedAt

  @@map("credit_config")
}

model CreditLog {
  id           String          @id @default(cuid())
  amount       Int
  operation    CreditOperation
  balanceAfter Int
  description  String?
  projectId    String?
  createdAt    DateTime        @default(now())
  project      Project?        @relation(fields: [projectId], references: [id])

  @@index([projectId])
  @@index([createdAt])
  @@map("credit_logs")
}

model Project {
  id              String        @id @default(cuid())
  name            String
  createdAt       DateTime      @default(now())
  updatedAt       DateTime      @updatedAt
  status          ProjectStatus @default(IDLE)
  totalUrls       Int           @default(0)
  processedCount  Int           @default(0)
  indexedCount    Int           @default(0)
  notIndexedCount Int           @default(0)
  errorCount      Int           @default(0)
  creditsUsed     Int           @default(0)
  startedAt       DateTime?
  completedAt     DateTime?
  creditLogs      CreditLog[]
  projectDomains  ProjectDomain[]
  urls            Url[]

  @@index([createdAt])
  @@index([status])
  @@map("projects")
}

model Url {
  id           String    @id @default(cuid())
  url          String    @unique
  isIndexed    Boolean   @default(false)
  anchorText   String?
  checkCount   Int       @default(0)
  status       UrlStatus @default(PENDING)
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt
  checkedAt    DateTime?
  errorMessage String?
  projectId    String
  domainId     String?
  domainData   Domain?   @relation(fields: [domainId], references: [id])
  project      Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([status])
  @@index([isIndexed])
  @@index([projectId, status])
  @@map("url")
}

model Domain {
  id        String   @id @default(cuid())
  domain    String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  urls      Url[]
  projects  ProjectDomain[]

  @@index([domain])
  @@map("domains")
}

model ProjectDomain {
  id               String    @id @default(cuid())
  projectId        String
  domainId         String
  notIndexedCount  Int       @default(0)
  totalUrlsChecked Int       @default(0)
  indexedUrlsCount Int       @default(0)
  isBlacklisted    Boolean   @default(false)
  isWhitelisted    Boolean   @default(false)
  blacklistedAt    DateTime?
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt
  project          Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  domain           Domain    @relation(fields: [domainId], references: [id], onDelete: Cascade)

  @@unique([projectId, domainId])
  @@index([isBlacklisted])
  @@map("project_domains")
}

enum CreditOperation {
  RESERVATION
  RELEASE
  CONSUMPTION
  REFUND
  ADJUSTMENT
}

enum ProjectStatus {
  IDLE
  QUEUED
  PROCESSING
  COMPLETED
  FAILED
  PAUSED
  IMPORTED
}

enum UrlStatus {
  PENDING
  PROCESSING
  COMPLETED
  FAILED
  QUEUED
}
